<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="1dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBasketName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAPL"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBasketQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No of stocks : "
                android:textColor="@color/black"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:inputType="textMultiLine"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
         android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/complianceTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_new"
                android:backgroundTint="#437C90"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPLIANT"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nonComplianceTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_new"
                android:backgroundTint="#413F3F"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NON-COMPLIANT"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:visibility="gone"/>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
             android:layout_marginEnd="5dp"
             android:background="@drawable/gradient_button"
            android:drawableTint="@color/white"
            android:fontFamily="@font/poppins_semi_bold"
            android:paddingStart="10dp"
             android:drawableStart="@drawable/baseline_remove_red_eye_24"
            android:paddingEnd="10dp"
            android:text="View"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp">

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgDelete"
            android:layout_width="23dp"
            android:layout_height="26dp"
            android:src="@drawable/delete"
            android:background="?actionBarItemBackground"
            android:tint="@color/red_btn_bg_color"
            android:backgroundTint="@color/red_btn_bg_color"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>
